<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Add New Blog</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">                   <!--This is a form to submit a new blog post -->
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">        <!-- Input field for uploading a cover image -->
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title">       <!-- Input field for entering the title -->
            </div>
            <div class="mb-3">
                <label for="body">Body</label>
                <textarea class="form-control" id="body" name="body"></textarea>   <!-- Text area for entering the body content -->
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>   <!-- Submit button for submitting the form -->
            </div>
        </form>
    </div>

    <%- include('./partials/script.ejs') %>
    <!-- <h1>hello</h1>  -->
</body>

</html>
 