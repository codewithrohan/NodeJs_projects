<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %> 
    <div class="container mt-4">
        <h1><%=blog.title %></h1>
        <img src="<%=blog.coverImageURL %>" height="250px">
        <pre class="mt-3"> <%=blog.body %></pre>            <!-- Display the body of the blog post -->
    </div>

    <div class="container mt-4">
        <img src="<%=blog.createdBy.profileImgUrl  %>" width="80px">
        <%=blog.createdBy.fullName %>     
    </div>

    <div class="container mt-3">
        <h3>comments</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%=blog._id%>" method="post">

                <div class="mb-3">
                  <input type="text" name="content" class="form-control" placeholder="Enter your comment">   <!-- this is the input field for entering a new comment -->
                </div>
                <button class="btn btn-sm btn-primary" type="submit">Add</button>
              </form>
        <% } %>
        <div class="mt-3">
            <h2>Comments (<%=comments.length %>)</h1>         <!-- Displaying the number of comments -->
            <% comments.forEach(comment => { %>
            <div>
              <img src="<%= comment.createdBy.profileImgUrl %>" width="50px" />     <!-- Displaying the profile image of the comment's creator -->
              <%= comment.createdBy.fullName %>
              <pre><%= comment.content %></pre>
            </div>
            <% }) %>
          </div>
        </div>
    <%- include('./partials/script.ejs') %>
      
</body>
</html>



